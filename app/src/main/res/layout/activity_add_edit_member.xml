<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE1126"
    tools:context=".add_member_activity">

    <ImageView
        android:id="@+id/colorfilter_add_edit_member"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/color_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="#40EEE8E8" />

    <TextView
        android:id="@+id/add_edit_member"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/edit_member"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/colorfilter_add_edit_member" />

    <TextView
        android:id="@+id/first_name_add_edit_member_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:labelFor="@id/fname_add_edit_member_edittext"
        android:text="@string/first_name"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_edit_member" />

    <TextView
        android:id="@+id/last_name_add_edit_member_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="33dp"
        android:labelFor="@id/lname__add_edit_member_edittext"
        android:text="@string/last_name"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/first_name_add_edit_member_textview"
        app:layout_constraintTop_toBottomOf="@+id/add_edit_member" />

    <TextView
        android:id="@+id/UID_add_edit_member_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:labelFor="@id/UID_edit_member_edittext"
        android:text="@string/uid"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/fname_add_edit_member_edittext"
        app:layout_constraintTop_toBottomOf="@+id/fname_add_edit_member_edittext" />

    <TextView
        android:id="@+id/section_add_edit_member_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="@string/section"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lname__add_edit_member_edittext"
        app:layout_constraintTop_toBottomOf="@+id/lname__add_edit_member_edittext" />

    <EditText
        android:id="@+id/notes_edit_member_edittext"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="@drawable/border"
        android:ems="10"
        android:gravity="start|top"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:labelFor="@id/notes_add_edit_member_textview"
        android:textColor="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notes_add_edit_member_textview" />

    <EditText
        android:id="@+id/fname_add_edit_member_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/first_name_add_edit_member_textview"
        app:layout_constraintTop_toBottomOf="@+id/first_name_add_edit_member_textview" />

    <EditText
        android:id="@+id/lname__add_edit_member_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/last_name_add_edit_member_textview"
        app:layout_constraintTop_toBottomOf="@+id/last_name_add_edit_member_textview" />

    <EditText
        android:id="@+id/UID_edit_member_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/UID_add_edit_member_textview"
        app:layout_constraintTop_toBottomOf="@+id/UID_add_edit_member_textview" />

    <Spinner
        android:id="@+id/section__add_edit_member_dropdown"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/spinner_background"
        app:layout_constraintStart_toStartOf="@+id/section_add_edit_member_textview"
        app:layout_constraintTop_toBottomOf="@+id/section_add_edit_member_textview" />

    <TextView
        android:id="@+id/notes_add_edit_member_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        android:labelFor="@id/notes_edit_member_edittext"
        android:text="@string/notes"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UID_edit_member_edittext" />

    <Button
        android:id="@+id/cancel_add_edit_member_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_border"
        android:text="@android:string/cancel"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notes_edit_member_edittext" />

    <Button
        android:id="@+id/ok_add_edit_member_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/button_border"
        android:text="@string/apply"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancel_add_edit_member_button"
        app:layout_constraintTop_toBottomOf="@+id/notes_edit_member_edittext" />

    <TextView
        android:id="@+id/department_add_edit_member_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:labelFor="@id/department_add_edit_member_edittext"
        android:text="@string/department"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/fname_add_edit_member_edittext"
        app:layout_constraintTop_toBottomOf="@+id/fname_add_edit_member_edittext" />

    <EditText
        android:id="@+id/department_add_edit_member_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/department_add_edit_member_textview"
        app:layout_constraintTop_toBottomOf="@+id/department_add_edit_member_textview" />

    <TextView
        android:id="@+id/role_edit_member_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:labelFor="@id/role_edit_member_edittext"
        android:text="@string/role"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lname__add_edit_member_edittext"
        app:layout_constraintTop_toBottomOf="@+id/lname__add_edit_member_edittext" />

    <EditText
        android:id="@+id/role_edit_member_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/role_edit_member_textview"
        app:layout_constraintTop_toBottomOf="@+id/role_edit_member_textview"
        android:importantForAutofill="no" />
</android.support.constraint.ConstraintLayout>
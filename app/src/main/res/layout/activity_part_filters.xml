<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/part_filters_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE1126"
    tools:context=".PartFilters">

    <ImageView
        android:id="@+id/colorfilter_part_filters"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#40EEE8E8"
        android:contentDescription="@string/color_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/part_filters_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/part_filters"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_part_filters_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:labelFor="@id/name_part_filters_edittext"
        android:text="@string/name"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/part_filters_header" />

    <TextView
        android:id="@+id/cost_part_filters_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:labelFor="@id/cost_part_filters_edittext"
        android:text="@string/cost"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sn_part_filters_edittext" />

    <EditText
        android:id="@+id/name_part_filters_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/name_part_filters_textview"
        app:layout_constraintTop_toBottomOf="@+id/name_part_filters_textview"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/cost_part_filters_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/cost_part_filters_textview"
        app:layout_constraintTop_toBottomOf="@+id/cost_part_filters_textview"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/sn_part_filters_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:labelFor="@id/sn_part_filters_edittext"
        android:text="@string/serial_number"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_part_filters_edittext" />

    <TextView
        android:id="@+id/compwith_part_filters_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:text="@string/compatible_with"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/name_part_filters_textview"
        app:layout_constraintStart_toEndOf="@+id/name_part_filters_textview" />

    <EditText
        android:id="@+id/sn_part_filters_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/sn_part_filters_textview"
        app:layout_constraintTop_toBottomOf="@+id/sn_part_filters_textview"
        android:importantForAutofill="no" />

    <Spinner
        android:id="@+id/compwith_part_filters_dropdown"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/spinner_background"
        android:dropDownWidth="match_parent"
        app:layout_constraintStart_toStartOf="@+id/compwith_part_filters_textview"
        app:layout_constraintTop_toBottomOf="@+id/compwith_part_filters_textview" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/compwith_part_filters_rview"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/add_part_filters_button"
        app:layout_constraintTop_toBottomOf="@+id/add_part_filters_button" />

    <Button
        android:id="@+id/apply_part_filters_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/button_border"
        android:text="@string/apply"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cost_part_filters_edittext" />

    <Button
        android:id="@+id/cancel_part_filters_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_border"
        android:text="@android:string/cancel"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cost_part_filters_edittext" />

    <Button
        android:id="@+id/add_part_filters_button"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/button_border"
        android:text="@string/add"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/compwith_part_filters_dropdown"
        app:layout_constraintTop_toBottomOf="@+id/compwith_part_filters_dropdown" />

</android.support.constraint.ConstraintLayout>
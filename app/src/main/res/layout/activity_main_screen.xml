<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE1126"
    tools:context=".MainScreen">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_list_main_screen_rview"
        android:layout_width="0dp"
        android:layout_height="657dp"
        android:layout_marginTop="48dp"
        android:background="#40EEE8E8"
        android:verticalScrollbarPosition="right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inventory_main_screen_dropdown" />

    <Button
        android:id="@+id/logout_main_screen_button"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/button_border"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/filter_main_screen_button"
        app:layout_constraintTop_toTopOf="@+id/filter_main_screen_button" />

    <Button
        android:id="@+id/filter_main_screen_button"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_border"
        android:text="@string/filters"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inventory_main_screen_dropdown" />

    <Button
        android:id="@+id/checkout_main_screen_button"
        android:layout_width="195dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_border"
        android:text="@string/checkout"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_main_screen_button" />

    <Button
        android:id="@+id/add_main_screen_button"
        android:layout_width="195dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_border"
        android:text="@string/add"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_list_main_screen_rview" />

    <Button
        android:id="@+id/remove_main_screen_button"
        android:layout_width="195dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_border"
        android:text="@string/remove"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/add_main_screen_button"
        app:layout_constraintTop_toBottomOf="@+id/item_list_main_screen_rview" />

    <Button
        android:id="@+id/edit_rentable_main_screen_button"
        android:layout_width="195dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_border"
        android:text="@string/edit_rentable"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/remove_main_screen_button"
        app:layout_constraintTop_toBottomOf="@+id/item_list_main_screen_rview" />

    <Button
        android:id="@+id/edit_note_main_screen_button"
        android:layout_width="195dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_border"
        android:text="@string/edit_note"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/checkout_main_screen_button"
        app:layout_constraintTop_toBottomOf="@+id/remove_main_screen_button" />

    <Button
        android:id="@+id/add_section_lead_main_screen_button"
        android:layout_width="195dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_border"
        android:text="@string/add_section_lead"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_main_screen_button" />

    <Button
        android:id="@+id/delete_section_main_screen_button"
        android:layout_width="195dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_border"
        android:text="@string/delete_section"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/checkout_main_screen_button"
        app:layout_constraintTop_toBottomOf="@+id/remove_main_screen_button" />

    <Button
        android:id="@+id/edit_member_main_screen_button"
        android:layout_width="195dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_border"
        android:text="@string/edit_member"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/remove_main_screen_button"
        app:layout_constraintTop_toBottomOf="@+id/item_list_main_screen_rview" />

    <Spinner
        android:id="@+id/inventory_main_screen_dropdown"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/spinner_background"
        android:entries="@array/Entries"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_section_main_screen_button"
        android:layout_width="195dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_border"
        android:text="@string/add_section"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/edit_note_main_screen_button"
        app:layout_constraintTop_toBottomOf="@+id/edit_rentable_main_screen_button" />

</android.support.constraint.ConstraintLayout>
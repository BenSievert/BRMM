<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE1126"
    tools:context=".add_member_activity">

    <ImageView
        android:id="@+id/colorfilter_edit_member"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#40EEE8E8"
        android:contentDescription="@string/color_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/edit_member"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/add_member"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/colorfilter_edit_member" />

    <TextView
        android:id="@+id/first_name_edit_member_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:labelFor="@id/fname_edit_member_edittext"
        android:text="@string/first_name"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_member_type_textview" />

    <TextView
        android:id="@+id/last_name_edit_member_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:labelFor="@id/lname_edit_member_edittext"
        android:text="@string/last_name"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/first_name_edit_member_textview"
        app:layout_constraintTop_toTopOf="@+id/first_name_edit_member_textview" />

    <TextView
        android:id="@+id/UID_edit_member_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:labelFor="@id/UID_edit_member_edittext"
        android:text="@string/uid"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/fname_edit_member_edittext"
        app:layout_constraintTop_toBottomOf="@+id/fname_edit_member_edittext" />

    <TextView
        android:id="@+id/section_edit_member_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/section"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lname_edit_member_edittext"
        app:layout_constraintTop_toTopOf="@+id/department_edit_member_textview" />

    <EditText
        android:id="@+id/notes_edit_member_edittext"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:background="@drawable/border"
        android:ems="10"
        android:gravity="start|top"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:labelFor="@id/notes_edit_member_textview"
        android:textColor="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notes_edit_member_textview" />

    <EditText
        android:id="@+id/fname_edit_member_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/first_name_edit_member_textview"
        app:layout_constraintTop_toBottomOf="@+id/first_name_edit_member_textview" />

    <EditText
        android:id="@+id/lname_edit_member_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/last_name_edit_member_textview"
        app:layout_constraintTop_toBottomOf="@+id/last_name_edit_member_textview" />

    <EditText
        android:id="@+id/UID_edit_member_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/UID_edit_member_textview"
        app:layout_constraintTop_toBottomOf="@+id/UID_edit_member_textview" />

    <Spinner
        android:id="@+id/section_edit_member_dropdown"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/spinner_background"
        app:layout_constraintStart_toStartOf="@+id/section_edit_member_textview"
        app:layout_constraintTop_toBottomOf="@+id/section_edit_member_textview" />

    <TextView
        android:id="@+id/notes_edit_member_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:labelFor="@id/notes_edit_member_edittext"
        android:text="@string/notes"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/notes_edit_member_edittext"
        app:layout_constraintTop_toBottomOf="@+id/UID_edit_member_edittext" />

    <Button
        android:id="@+id/cancel_edit_member_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_border"
        android:text="@android:string/cancel"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notes_edit_member_edittext" />

    <Button
        android:id="@+id/ok_add_member_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/button_border"
        android:text="@string/apply"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancel_edit_member_button"
        app:layout_constraintTop_toBottomOf="@+id/notes_edit_member_edittext" />

    <TextView
        android:id="@+id/department_edit_member_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:labelFor="@id/department_edit_member_edittext"
        android:text="@string/department"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/fname_edit_member_edittext"
        app:layout_constraintTop_toBottomOf="@+id/fname_edit_member_edittext" />

    <EditText
        android:id="@+id/department_edit_member_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/department_edit_member_textview"
        app:layout_constraintTop_toBottomOf="@+id/department_edit_member_textview" />

    <TextView
        android:id="@+id/role_edit_member_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/role_edit_member_edittext"
        android:text="@string/role"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lname_edit_member_edittext"
        app:layout_constraintTop_toTopOf="@+id/UID_edit_member_textview" />

    <EditText
        android:id="@+id/role_edit_member_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/role_edit_member_textview"
        app:layout_constraintTop_toBottomOf="@+id/role_edit_member_textview"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/edit_member_type_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/member_type"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/edit_member"
        app:layout_constraintTop_toBottomOf="@+id/edit_member" />

    <RadioGroup
        android:id="@+id/member_type_edit_member_radiogroup"
        android:layout_width="199dp"
        android:layout_height="32dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/edit_member_type_textview"
        app:layout_constraintTop_toBottomOf="@+id/edit_member">

        <RadioButton
            android:id="@+id/edit_student_add_member_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_member" />

        <RadioButton
            android:id="@+id/edit_faculty_add_member_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/faculty" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>
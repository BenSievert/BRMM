<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Instrument_filters_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE1126"
    tools:context=".bandmember_filters">

    <ImageView
        android:id="@+id/colorfilter_instrument_filters"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#40EEE8E8"
        android:contentDescription="@string/color_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/instrument_filters_header"
        android:layout_width="323dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/instrument_filters"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_instrument_filters_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="60dp"
        android:text="@string/name"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instrument_filters_header" />

    <TextView
        android:id="@+id/cost_intrument_filters_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:labelFor="@id/cost_instrument_filters_edittext"
        android:text="@string/cost"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/name_instrument_filters_textview"
        app:layout_constraintTop_toTopOf="@+id/name_instrument_filters_textview" />

    <EditText
        android:id="@+id/cost_instrument_filters_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number|textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/cost_intrument_filters_textview"
        app:layout_constraintTop_toBottomOf="@+id/cost_intrument_filters_textview" />

    <EditText
        android:id="@+id/name_instrument_filters_edittext"
        android:layout_width="176dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:hint="@string/name"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/name_instrument_filters_textview"
        app:layout_constraintTop_toBottomOf="@+id/name_instrument_filters_textview" />

    <TextView
        android:id="@+id/id_instrument_filters_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:labelFor="@id/id_instrument_filters_edittext"
        android:text="@string/id_number"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/name_instrument_filters_edittext"
        app:layout_constraintTop_toBottomOf="@+id/name_instrument_filters_edittext" />

    <EditText
        android:id="@+id/id_instrument_filters_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/id_instrument_filters_textview"
        app:layout_constraintTop_toBottomOf="@+id/id_instrument_filters_textview" />

    <TextView
        android:id="@+id/owner_instrument_filters_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:labelFor="@id/owner_instrument_filters_edittext"
        android:text="@string/owner"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/cost_instrument_filters_edittext"
        app:layout_constraintTop_toBottomOf="@+id/cost_instrument_filters_edittext" />

    <EditText
        android:id="@+id/owner_instrument_filters_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/owner_instrument_filters_textview"
        app:layout_constraintTop_toBottomOf="@+id/owner_instrument_filters_textview"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/ok_instrument_filters_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:background="@drawable/button_border"
        android:text="@string/apply"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/cat_instrument_filters_dropdown"
        app:layout_constraintHorizontal_bias="0.623"
        app:layout_constraintStart_toStartOf="@+id/cat_instrument_filters_dropdown"
        app:layout_constraintTop_toTopOf="@+id/cancel_instrument_filters_button" />

    <Button
        android:id="@+id/cancel_instrument_filters_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/button_border"
        android:text="@android:string/cancel"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/section_instrument_filters_dropdown"
        app:layout_constraintStart_toStartOf="@+id/section_instrument_filters_dropdown"
        app:layout_constraintTop_toBottomOf="@+id/section_instrument_filters_dropdown" />

    <TextView
        android:id="@+id/section_instrument_filters_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:text="@string/section"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/id_instrument_filters_edittext"
        app:layout_constraintTop_toBottomOf="@+id/id_instrument_filters_edittext" />

    <Spinner
        android:id="@+id/section_instrument_filters_dropdown"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/spinner_background"
        app:layout_constraintStart_toStartOf="@+id/section_instrument_filters_textview"
        app:layout_constraintTop_toBottomOf="@+id/section_instrument_filters_textview" />

    <TextView
        android:id="@+id/cat_instrument_filters_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:text="@string/categories"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/owner_instrument_filters_edittext"
        app:layout_constraintTop_toBottomOf="@+id/owner_instrument_filters_edittext" />

    <Spinner
        android:id="@+id/cat_instrument_filters_dropdown"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/spinner_background"
        app:layout_constraintStart_toStartOf="@+id/cat_instrument_filters_textview"
        app:layout_constraintTop_toBottomOf="@+id/cat_instrument_filters_textview" />

</android.support.constraint.ConstraintLayout>
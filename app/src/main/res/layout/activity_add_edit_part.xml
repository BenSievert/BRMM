<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE1126"
    tools:context=".add_edit_part">

    <ImageView
        android:id="@+id/add_edit_part_colorfilter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/color_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="#40EEE8E8" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/parts"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comp_with_add_edit_parts_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:text="@string/compatible_with"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/name_add_edit_part_textview"
        app:layout_constraintStart_toEndOf="@+id/name_add_edit_part_textview" />

    <TextView
        android:id="@+id/serial_number_add_edit_part_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:labelFor="@id/SN_add_edit_part_edittext"
        android:text="@string/serial_number"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/name_add_edit_part_edittext"
        app:layout_constraintTop_toBottomOf="@+id/name_add_edit_part_edittext" />

    <TextView
        android:id="@+id/cost_add_edit_part_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:labelFor="@id/cost_add_edit_part_edittext"
        android:text="@string/cost"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SN_add_edit_part_edittext" />

    <TextView
        android:id="@+id/name_add_edit_part_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="58dp"
        android:labelFor="@id/name_add_edit_part_edittext"
        android:text="@string/name"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/name_add_edit_part_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/name_add_edit_part_textview"
        app:layout_constraintTop_toBottomOf="@+id/name_add_edit_part_textview"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/cost_add_edit_part_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/cost_add_edit_part_textview"
        app:layout_constraintTop_toBottomOf="@+id/cost_add_edit_part_textview" />

    <EditText
        android:id="@+id/SN_add_edit_part_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="@+id/serial_number_add_edit_part_textview"
        app:layout_constraintTop_toBottomOf="@+id/serial_number_add_edit_part_textview"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/cancel_add_edit_part_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_border"
        android:text="@android:string/cancel"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cost_add_edit_part_edittext" />

    <Button
        android:id="@+id/ok_add_edit_part_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:background="@drawable/button_border"
        android:text="@android:string/ok"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancel_add_edit_part_button"
        app:layout_constraintTop_toTopOf="@+id/cancel_add_edit_part_button" />

    <Spinner
        android:id="@+id/comp_with_add_edit_part_dropdown"
        android:layout_width="175dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@+id/comp_with_add_edit_parts_textview"
        app:layout_constraintTop_toBottomOf="@+id/comp_with_add_edit_parts_textview" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/SN_add_edit_part_rview"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/comp_with_add_edit_part_dropdown"
        app:layout_constraintTop_toBottomOf="@+id/comp_with_add_edit_part_dropdown" />

    <TextView
        android:id="@+id/add_existing_add_edit_part_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:labelFor="@id/add_existing_add_edit_part_dropdown"
        android:text="@string/add_existing"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ok_add_edit_part_button" />

    <Spinner
        android:id="@+id/add_existing_add_edit_part_dropdown"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/spinner_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_existing_add_edit_part_textview" />

</android.support.constraint.ConstraintLayout>